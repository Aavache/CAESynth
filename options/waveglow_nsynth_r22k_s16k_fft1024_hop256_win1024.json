{
    "experiment_name": "waveglow_nsynth_r22k_s16k_fft1024_hop256_win1024",
    "data": {
        "dataset": "nsynth",
        "data_path": "./data/nsynth/nsynth-train",
        "meta_file": "examples.json",
        "inst": ["mallet","string","brass","reed", "flute"],
        "rate": 22050,
        "segment_size": 16000

    },
    "model": {
        "name": "waveglow",
        "waveglow_config" :{
            "n_mel_channels": 80,
            "n_flows": 12,
            "n_group": 8,
            "n_early_every": 4,
            "n_early_size": 2,
            "WN_config": {
                "n_layers": 8,
                "n_channels": 256,
                "kernel_size": 3
            }
        }
    },
    "train": {
        "n_epochs": 100000,
        "iter_per_epoch": 2000,
        "start_epoch": 1,
        "lr": 5e-5,
        "beta1": 0.9,
        "save_epoch_freq": 1,
        "lambda_recon": 10.0,
        "devices": [0],
        "batch_size": 1,
        "print_freq": 50,
        "save_latest_freq": 5000, 
        "epoch_shuffle": true,
        "batch_shuffle": true,
        "seed": 1234,
        "n_threads": 1,
        "checkpoints_dir": "checkpoints"
    },
    "test": {
        "output_dir": "test_samples",
        "batch_shuffle": false,
        "devices": [0],
        "print_freq": 10,
        "wav_length": 64000,
        "n_threads": 1,
        "sample_size": 50,
        "batch_size": 1,
        "load_suffix": "latest",
        "seed": 1234
    }
}
